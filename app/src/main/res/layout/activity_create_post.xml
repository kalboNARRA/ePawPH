<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="e"
                    android:textSize="24sp"
                    android:textColor="#58C185"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paw"
                    android:textSize="20sp"
                    android:textColor="#2F2F2F"
                    android:textStyle="bold"
                    android:layout_marginStart="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PH"
                    android:textSize="8sp"
                    android:textColor="#2F2F2F"
                    android:textStyle="bold"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Form Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Description"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Name Field -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Gender and Pet Type Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RelativeLayout
                    android:id="@+id/genderSelector"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_centerVertical="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Select"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/petTypeSelector"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvPetType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pet type"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_centerVertical="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Select"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- Breed, Color and Age Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etBreed"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Breed"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Age"
                    android:background="@drawable/edit_text_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Color Field -->
            <EditText
                android:id="@+id/etColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Color"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Choose File Button -->
            <RelativeLayout
                android:id="@+id/btnChooseFile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose File"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!-- Last Seen Date -->
            <EditText
                android:id="@+id/etLastSeenDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last seen (Date)"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:focusable="false"
                android:clickable="true"/>

            <!-- Last Seen Location -->
            <EditText
                android:id="@+id/etLastSeenLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Last seen (Location)"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Message Optional -->
            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Message (Optional)"
                android:background="@drawable/edit_text_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:textSize="14sp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:layout_marginBottom="24dp"/>

            <!-- Create Post Button -->
            <Button
                android:id="@+id/btnCreatePost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Create new post"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_bg_dark"
                android:layout_marginBottom="24dp"/>

            <!-- Bottom Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stay hopeful â€” we wish for your pet's safe return soon. Our community is here to help you every step of the way."
                android:textSize="12sp"
                android:textColor="#757575"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>